<h1>Listing listings</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Identifier</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% current_user.listings.each do |listing| %>
  <tr>
    <td><%= link_to listing.name, listing_path(listing) %></td>
    <td><%= listing.identifier %></td>
    <td><%= link_to 'Show', listing %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

