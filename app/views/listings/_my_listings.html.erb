<h2>My Listings</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Identifier</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% current_user.listings.each do |listing| %>
      <tr>
        <td><%= link_to listing.name, listing_path(listing) %></td>
        <td><%= link_to listing.identifier, listing_path(listing) %></td>
        <td>
          <%= link_to 'Edit', edit_listing_path(listing), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', listing_path(listing), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Listing', new_listing_path %>