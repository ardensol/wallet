<h2>Listings <%= link_to 'New', new_listing_path, :class => 'btn btn-mini' %></h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% current_user.listings.each do |listing| %>
      <tr>
        <td><h4><%= link_to "#{listing.name} - #{listing.identifier}", listing_path(listing) %></h4></td>
        <td>
          <%= link_to 'Edit', edit_listing_path(listing), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', listing_path(listing), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>