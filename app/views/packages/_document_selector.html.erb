<table class="table table-striped">
  <thead>
    <tr>
      <th>Available Documents</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |d| %>
    <tr>
      <td><%= link_to "+", package_documents_path(@package, :id => d),
              :method => 'post', :remote => true, :class => "btn btn-success" %>
          <%= d.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Documents In This Package</th>
    </tr>
  </thead>
  <tbody>
    <% @package.documents.each do |d| %>
    <tr>
      <td><%= link_to "-", package_documents_path(@package, :id => d),
              :method => 'delete', :remote => true, :class => "btn btn-danger" %>
          <%= d.name %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>