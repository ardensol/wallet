<table class="table table-striped table-thirds">
  <thead>
    <tr>
      <th>Available Documents</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |d| %>
    <tr>
      <td><%= link_to "+", package_documents_path(@package, :id => d),
              :method => 'post', :remote => true, :class => "btn btn-mini btn-success" %>
          <%= d.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<table class="table table-striped table-thirds">
  <thead>
    <tr>
      <th>Documents In This Package</th>
    </tr>
  </thead>
  <tbody>
    <% @package.documents.each do |d| %>
    <tr>
      <td><%= link_to "-", package_documents_path(@package, :id => d),
              :method => 'delete', :remote => true, :class => "btn btn-mini btn-danger" %>
          <%= d.name %> <%= d.as_of_date %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>