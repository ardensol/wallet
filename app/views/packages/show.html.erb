<h1>Package</h1>

<p>
  <b>Name</b><br>
  <%= @package.name %>
</p>
<ul>
  <% @package.documents.each do |d| %>
  <li><%= link_to d.name, package_documents_path(@package, :id => d), :method => 'delete', :remote => true %></li>
  <% end %>
</ul>

<input type="text" name="document_ids">

<ul>
  <% @documents.each do |d| %>
  <li><%= link_to d.name, package_documents_path(@package, :id => d), :method => 'post', :remote => true %></li>
  <% end %>
</ul>
<div class="form-actions">
  <%= link_to 'Back', packages_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_package_path(@package), :class => 'btn' %>
  <%= link_to 'Delete', package_path(@package), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
