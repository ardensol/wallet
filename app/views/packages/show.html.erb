<p>
  <h3>
    <%= @package.name %> 
    <% if @package.identifier.present? %>
       - (<%= @package.identifier %>)
    <% end%>
  </h3>
  <div class="form-actions">
    <%= link_to 'Dashboard', dashboard_path, :class => 'btn btn-mini btn-info'  %>
    <%= link_to 'Edit', edit_package_path(@package), :class => 'btn btn-mini' %>
    <%= link_to 'Delete', package_path(@package), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
  </div>
</p>
<div id="document_selector">
  <%= render "document_selector" %>
</div>
<div class="table-thirds">
  <%= render "share_package" %>
</div>