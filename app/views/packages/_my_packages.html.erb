<h2>Packages <%= link_to 'New', new_package_path, :class => 'btn btn-mini' %></h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><h4><%= link_to "#{package.name} - #{package.identifier}", package_path(package) %></h4></td>
        <td>
          <%= link_to 'Edit', edit_package_path(package), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', package_path(package), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>