<%= simple_form_for @renter_profile do |f| %>
  <%= f.error_notification %>
  <div class="inputs">
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.input :first_name, :required => true, :autofocus => true %>
    <%= f.input :last_name, :required => true %>
    <%= f.input :date_of_birth, :as => :date, :start_year => Date.today.year - 100,
                :end_year => Date.today.year, :order => [:month, :day, :year],
                :label => "Date of Birth (only MM/YY will be revealed to brokers & managers)" %>
  </div>
  <div class="actions">
    <%= f.button :submit, "Continue" %>
  </div>
<% end %>