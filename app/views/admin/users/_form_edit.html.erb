<div class="inputs">
  <%= f.input :email, :required => true, :autofocus => true %>
  <%= f.input :first_name, :required => true %>
  <%= f.input :last_name, :required => true %>
  <%= f.input :mobile_num, :label => "Mobile number" %>
  <%= f.input :home_num, :label => "Home number" %>
  <%= f.input :address_1, :label => "Address 1" %>
  <%= f.input :address_2, :label => "Address 2" %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :zip, :label => "Zip code" %>
  <%= f.association :roles, :as => :radio_buttons %>
</div>

<div class="actions">
  <%= f.button :submit, "Update" %>
</div>