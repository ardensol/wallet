<p>
  <h2>
    <%= @shared_package.package.user.first_name %> <%= @shared_package.package.user.last_name %> - <%= @shared_package.package.identifier %>
  </h2>
  <div class="form-actions">
    <%= link_to 'Dashboard', dashboard_path, :class => 'btn btn-mini btn-info'  %>
  </div>
</p>
<div class="table table-half">
  <h3>Profile:</h3>
  <ul class="unstyled">
    <li><%= mail_to @shared_package.package.user.email %></li>
    <li><% unless @shared_package.package.user.mobile_num.blank? %><%= @shared_package.package.user.mobile_num %><% end %></li>
    <li><% unless @shared_package.package.user.home_num.blank? %><%= @shared_package.package.user.home_num %><% end %></li>
  </ul>
    <p>
      <% unless @shared_package.package.user.address_1.blank? %><%= @shared_package.package.user.address_1 %><% end %><br />
      <% unless @shared_package.package.user.address_2.blank? %><%= @shared_package.package.user.address_2 %><% end %>
      <% unless @shared_package.package.user.city.blank? %><%= @shared_package.package.user.city %><% end %>, 
      <% unless @shared_package.package.user.state.blank? %><%= @shared_package.package.user.state %><% end %>  
      <% unless @shared_package.package.user.zip.blank? %><%= @shared_package.package.user.zip %><% end %>
    </p>
</div>
<div class="table table-striped table-half">
  <table>
    <thead>
      <tr>
        <th><h3>Documents</h3></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @shared_package.package.documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= link_to "download", document.file.url, :target => "_blank", :class => "btn btn-mini" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>