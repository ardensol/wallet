			      <tr>
			        <td>
			          <%= link_to document.name, document_path(document) %> 
			          <%= link_to 'download', document.file.url, :target => "_blank", :class => "btn btn-mini" %>
			        </td>
			        <td><%= document.document_category.name %></td>
			        <td>
