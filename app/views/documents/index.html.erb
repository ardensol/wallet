<h2>Documents <%= link_to 'New', new_document_path, :class => 'btn btn-mini' %></h2>
<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#all" data-toggle="tab">All Docs</a></li>
    <li><a href="#bank_statements" data-toggle="tab">Bank Statements</a></li>
    <li><a href="#taxes" data-toggle="tab">Taxes</a></li>
    <li><a href="#employment" data-toggle="tab">Employment</a></li>
    <li><a href="#references" data-toggle="tab">References</a></li>
    <li><a href="#miscellaneous" data-toggle="tab">Miscellaneous</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="all">
      <table class="table table-striped">
			  <thead>
			    <tr>
			      <th>Name</th>
			      <th>Category</th>
			      <th>As of Date</th>
			      <th>Actions</th>
			    </tr>
			  </thead>
			  <tbody>
			    <% @documents.each do |document| %>
			      <tr>
			        <td>
			          <h4>
			          	<%= best_in_place document, :name %> 
			          	<span class="form-prompt"><- click to rename</span>
			          </h4>
			        </td>
			        <td>
			        	<%= best_in_place document, :document_category_id, :type => :select, 
			        				:collection => category_selection(DocumentCategory.renter) %>
			        </td>
			        <td>
			        	<%= document.as_of_date %>
			        </td>
			        <td>
			          <%= link_to 'Edit', edit_document_path(document), :class => 'btn btn-mini' %>
			          <%= link_to 'Destroy', document_path(document), :method => :delete, 
			          			:confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
			        </td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
    </div>
