<h3>Please give us the address at which you currently reside</h3>
<%= simple_form_for @renter_profile, url: wizard_path do |f| %>
  <div class="inputs">
    <%= f.input :address_1, :label => "Address 1" %>
    <%= f.input :address_2, :label => "Address 2" %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip, :label => "Zip code" %>
    <%= f.input :country %>
  </div>
  <div class="actions">
    <%= f.button :submit, "Continue -->" %>
  </div>
<% end %>